<!DOCTYPE html>
<html>
<head>
  <title>Unspoiled</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
  <div class= "row">
    <div class="col-sm-4"><h3><%= link_to "Unspoiled", root_path %></h3></div>
  </div>
    <% if current_user %>
      <div class="row">
        <div class="col-sm-3">filter status: <%= link_to current_user.on_or_off, user_path(current_user), method: "put" %></div>
        <div class="col-sm-3"><%= link_to "my filters", user_path(current_user) %></div>
        <div class="col-sm-3"><%= link_to 'Logout', logout_path(current_user.id), method: "delete" %></div>
      </div>
  <% else %>
    <%= render "sessions/new" %>
    <div>
      <%= link_to "Create Account", new_user_path %>
    </div>
<% end %>
<body>

<%= yield %>

</body>
</html>
