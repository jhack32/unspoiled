 </div>

<div id= "flash-message-container">
  <% if flash[:notice] %>
    <p class='notice'><%=h flash[:notice] %></p>
  <% end %>
</div>
      <div class="row">
        <div class="col-sm-3">filter status: <%= link_to current_user.on_or_off, user_path(current_user), method: "put" %></div>
