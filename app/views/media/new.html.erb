<div class="category">
  <% if logged_in? %>
  <ul class="no-list-style">
    <%= form_for Media.new, url: category_media_index_path(params[:category_id]) do |t| %>
      <li class="block title filter-padding">Enter the name of the filter:</li>
      <li class="inline text"><%= t.text_field :title %></li>

      <div class="btn-group-md">
      <button type="button" class="btn-xs btn-primary"><%= t.submit 'Add to filter', class: "no-button"  %>
      </button>
    </div>
    <% end %>
  </ul>
  <% else %>
    <h1>Please login to create a filter!</h1>
  <% end %>
</div>
