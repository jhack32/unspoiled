<h1>Titles:</h1>
<% if logged_in? %>
  <ul>
   <% if @medias %>
    <% @medias.each do |media| %>
      <li><%= media.title %></li>
      <%= form_for :preference, url: user_preferences_path(current_user.id) do |t| %>
        <%= t.hidden_field :media_id, value: media.id %>
        <%= t.submit 'Add to filter' %>
        <% end %>
      <% end %>
    <% else %>
      <li>There is no media here</li>
    <% end %>
  </ul>
  <% else %>

<h2>Please login or create an account to access filters.</h2>
<% end %>

